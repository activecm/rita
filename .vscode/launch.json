    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch RITA Import",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/rita.go",
            "args": [
                "import",
                "--database=${input:dbName}",
                "--logs=${input:logPath}",
                "--rebuild"
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "dbName",
            "description": "Enter the database name"
        },
        {
            "type": "promptString",
            "id": "logPath",
            "description": "Enter the path to the logs"
        }
    ]
}